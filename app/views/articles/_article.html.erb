<div id="<%= dom_id article %>">
  <h2><%= article.title %></h2>
  <div class="article-images">
    <% article.pictures.each do |image| %>
      <%= image_tag image.variant(resize_to_limit: [300, 300]) %>
    <% end %>
  </div>
  <div class="article-body">
    <%= markdown(article.body) %>
  </div>
</div>
