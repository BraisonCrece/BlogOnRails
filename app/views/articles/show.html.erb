<%= render partial: 'article', locals: { article: @article } %>
<div class="article flex justify-content-between">
  <%= button_to "Destroy this article", @article, method: :delete, class: 'btn btn-danger' %>
  <div class="common">
    <%= link_to "Edit this article", edit_article_path(@article) %>
    <%= link_to "Back to articles", articles_path %>
  </div>
</div>
<div class="article-comments mt-5">
  <div class="flex justify-content-between">
    <h3>Comments</h3>
    <p id="article-count"><%= pluralize(@article.comments.count,'comment') %></p>
  </div>
  <div id="comment-form">
    <%= render partial: 'comments/form', locals: { article: @article } %>
  </div>
  <div id="article-comments-list">
    <%= render partial: 'comments/comment', locals: { article: @article} %>
  </div>
</div>
