<div class="comment-form">
  <%= form_with(model: [article, Comment.new], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
