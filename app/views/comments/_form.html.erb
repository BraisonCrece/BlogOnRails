<div class="comment-form mt-4">
  <%= form_with(model: [article, comment], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control' %>
    </div>
    <div class="form-group mt-2">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
