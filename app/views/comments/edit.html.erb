<%= form_with(model: @comment, url: article_comment_path) do |form| %>
  <div class="form-group">
    <%= turbo_frame_tag @comment.id do %>
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control' %>
      <%= form.button 'Save comment' %>
      <%= link_to 'cancel', article_path(@comment.article_id) %>
    <% end %>
  </div>
  <div class="form-group mt-2">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
