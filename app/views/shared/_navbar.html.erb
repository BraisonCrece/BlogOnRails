<div class="relative bg-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <div class="flex items-center justify-between border-b-2 border-gray-100 py-6 md:justify-start md:space-x-10">
      <div class="flex justify-start lg:w-0 lg:flex-1">
        <%= link_to "Blog On Rails", root_path, class: 'blog-on-rails' %>
      </div>
      <nav class="hidden space-x-10 md:flex">
      </nav>
      <div class="items-center justify-end md:flex md:flex-1 lg:w-0">
        <% if user_signed_in? %>
          <%= link_to 'Log out', destroy_user_session_path, data: { 'turbo-method': :delete }, class: "ml-8 inline-flex items-center justify-center whitespace-nowrap rounded-md border border-transparent bg-red-400 px-4 py-2 text-base font-mediums shadow-sm", id: 'log-out'  %>
        <% else %>
          <%= link_to 'Sign in', new_user_session_path, class: 'whitespace-nowrap text-base font-medium text-gray-500 hover:text-gray-900', id: 'sign-in'%>
          <%= link_to 'Sign up', new_user_registration_path, class: 'ml-8 inline-flex items-center justify-center whitespace-nowrap rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-base font-mediums shadow-sm ', id: 'sign-up' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
